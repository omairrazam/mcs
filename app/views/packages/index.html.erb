

<h1>Listing Packages</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Description</th>
      <th>Price</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @packages.each do |package| %>
      <tr>
        <td><%= package.name %></td>
        <td><%= package.type %></td>
        <td><%= package.description %></td>
        <td><%= package.price %></td>
        <td><%= package.status %></td>

        <td><%= link_to 'Show', package %></td>
        <% if can? :update, package %>
          <td><%= link_to 'Edit', edit_package_path(package) %></td>
        <% end %>
        <% if can? :destroy, package %>
          <td><%= link_to 'Destroy', package, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if can? :create, Package.new %>
<%= link_to 'New Package', new_package_path %>
<% end %>
